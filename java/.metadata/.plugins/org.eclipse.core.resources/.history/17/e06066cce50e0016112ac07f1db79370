package itay.sandbox;

import sp.sparky4j.core.Sparky;
import sp.sparky4j.core.graphics.Window;
import sp.sparky4j.core.util.Timer;

public class Main {
	
	public static void main(String[] args) {
		// Initialize the library
		Sparky.init();
		
		// Create our window
		Window window = new Window("Sandbox test!", 960, 540);
		
		// For fps counter
		Timer timer = new Timer();
		int frames = 0;
		
		// As far the window is not closed, do rendering and updating
		while(!window.closed()) {
			// Clear the window
			window.clear();
			
			
			// Update the window
			window.update();
			
			// Fps counter
			frames++;
			if(timer.elapsed() >= 10000) {
				System.out.println(frames + " fps");
			}
		}
	}
	
}
