package sp.sparky4j.core;

import com.badlogic.jglfw.utils.SharedLibraryLoader;

public class Sparky {
	
	private static boolean init = false;
	private static SharedLibraryLoader loader = new SharedLibraryLoader();
	
	public static void init() {
		if(init) {
			System.err.println("Sparky already initialized!");
			return;
		}
		loader.load("FreeImage");
		//loader.load("glfw3");
		//loader.load("Sparky4j-core");
		init = true;
	}
	
	public static boolean isInit() {
		return init;
	}
	
}
